!!!
%html
	%head
		%title Stripe to Freeagent
		= stylesheet_link_tag    "application", media: "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
%body
	.container
		.header
			%ul.nav.nav-pills.pull-right
				= active_link_to "Home", root_path, wrap_tag: :li, active: [["pages"], ["home"]]
				= active_link_to "Logs", logs_path, wrap_tag: :li if current_user
				%li= mail_to "dean@voupe.co.uk", "Contact", subject: "Stripe to FreeAgent"
			%h3.text-muted Stripe to FreeAgent

		.alert_messages
			- if flash[:notice]
				.alert.alert-success= flash[:notice]
			- if flash[:alert]
				.alert.alert-danger= flash[:alert]
		
		= yield
		
		.footer
			%p.r= link_to "Logout", destroy_user_session_path, method: :delete
			%p This is an app by #{link_to "Voupe", "http://voupe.co.uk"} and it's #{link_to "Open Source", "https://github.com/voupe/stripe_to_freeagent"}!

	:javascript
		var _gauges = _gauges || [];
		(function() {
			var t   = document.createElement('script');
			t.type  = 'text/javascript';
			t.async = true;
			t.id    = 'gauges-tracker';
			t.setAttribute('data-site-id', '532f0f93e32bb466250007f3');
			t.src = '//secure.gaug.es/track.js';
			var s = document.getElementsByTagName('script')[0];
			s.parentNode.insertBefore(t, s);
		})();